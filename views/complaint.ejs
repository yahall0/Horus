<body>
    <script>
        let userId = -1
            // <% if (currentUser != null) { %>
            //     userId = <%- JSON.stringify(currentUser._id) %> 
            // <% } %>
    </script>
    <%- include('navbar.ejs') %>
        <div class="row-auto">
            <div class="col-lg-5 col-sm-7 offset-lg-1"  >
                <div class="card mb-3 shadow">
                    <img class="img-fluid" src="<%= complaint.image.url %>" alt="">    
                    <div class="card-body">
                        <h5 class="card-title"><strong><%= complaint.title %></strong></h5>
                        <p class="card-text"><small class="text-muted">By: <%= complaint.author.username %></small></p>
                        <p class="card-text"><%= complaint.description %></p>
                        <p class="card-text"><small class="text-muted">Time: <%= complaint.date %></small></p>
                        <p class="card-text"><small class="text-muted">
                            <% if(currentUser !== null && currentUser._id.toString() == complaint.author._id) { %>
                            <form action="/<%= complaint._id %>/delete?_method=DELETE" method=POST>
                              <button class="btn btn-danger">Delete</button>  
                             </form>
                        <% } %>
                        <p class="card-text"><small class="text-muted"> 
                        <p class="card-text"><small class="text-muted">Click on image to open in google maps</small></p>
                    </div>
                    <a href="<%= `http://www.google.com/maps/place/${complaint.latitude},${complaint.longitude}` %>" target="_blank"> <img class="img-fluid" src="<%= `https://api.mapbox.com/styles/v1/mapbox/streets-v12/static/pin-s-l+000(${complaint.longitude},${complaint.latitude})/${complaint.longitude},${complaint.latitude}, 14/1000x600?access_token=${mapboxToken}` %>"
                        class="card-img-top"> </a>
                </div>
            </div>
        </div>
</body>

</html>