        <script>
            map.getCanvas().style.cursor = 'pointer';
            var marker;

            map.on('click', function (e) {
                if (marker) {
                    marker.remove();
                }

                marker = new mapboxgl.Marker()
                    .setLngLat(e.lngLat)
                    .addTo(map);

                document.getElementById('longitude').value = e.lngLat.lng;
